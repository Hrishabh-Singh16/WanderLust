<% layout("/layouts/boilerplate") -%>

           <div class="row mt-3">
            <h3 class="col-6 offset-3"> Login</h3>

            <div class="col-6 offset-3 mt-3 " style="min-height: 70vh;">
                <form action="/login" method="post" novalidate class="needs-validation w-100">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type='text' name="username" placeholder="Enter username" id="username" class="form-control" required />
                       
                    </div>
                 
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type='password' name="password" placeholder="Enter password" id="password" class="form-control" required />
                      
                    </div>
                    <button class="btn btn-success">Login</button>
                </form>
            </div>
        </div>